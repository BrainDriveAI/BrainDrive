# Production Environment Configuration

# Application Settings
APP_NAME=BrainDrive
APP_ENV=prod
DEBUG=false
API_V1_PREFIX=/api/v1

# Server Settings
HOST=0.0.0.0
PORT=8000

# Security
# IMPORTANT: Change this to a secure random string in production!
SECRET_KEY=replace-with-secure-production-key
ACCESS_TOKEN_EXPIRE_MINUTES=15
ALGORITHM=HS256

# Database
# Replace with your production database URL
DATABASE_URL=postgresql://user:password@localhost:5432/braindrive

# Redis Configuration
USE_REDIS=true
REDIS_HOST=redis.production.internal
REDIS_PORT=6379

# Rate Limiting
RATE_LIMIT_PER_SECOND=5

# Plugin System
PLUGIN_DIR=plugins
PLUGIN_MANIFEST=manifest.json

# Logging
LOG_LEVEL=INFO

# CORS Settings - Replace with your actual production domain
CORS_ALLOW_ORIGINS=["https://your-production-domain.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE"]
CORS_ALLOW_HEADERS=["Authorization", "Content-Type"]

# Optional: Monitoring
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_METRICS=true

# AI Provider Settings
ENABLE_TEST_ROUTES=false  # Disable test routes in production
